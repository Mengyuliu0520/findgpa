<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE world
[
<!ELEMENT region (country+)>
<!ELEMENT country (university+)>
<!ELEMENT university (campus+, rank+)>
<!ATTLIST university
    language CDATA #REQUIRED
    code ID #REQUIRED
    name CDATA #REQUIRED
>
<!ELEMENT campus (department+)>
<!ATTLIST campus
    name CDATA #REQUIRED
    location CDATA #IMPLIED
    url CDATA #REQUIRED
>
<!ELEMENT department (degree+, rank+)>
<!ATTLIST department name CDATA #IMPLIED>
<!ELEMENT rank (#PCDATA)>
<!ATTLIST rank
    name (ARWU|QS)
    year CDATA #REQUIRED
>
<!ELEMENT degree (#PCDATA)>
<!ATTLIST degree
    mingpa CDATA #IMPLIED
    suggpa CDATA #IMPLIED
    name CDATA #REQUIRED
    period CDATA #REQUIRED
>
]>

<world>
  <region name="europe" />
    <country name="UK" />
  <region>America</region>
    <country>US</country>
      <university name="Stanford University">
      </university>
  <region>Australia</region>
    <country>Australia</country>
</world>
