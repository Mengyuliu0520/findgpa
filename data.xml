<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE world
[
<!ELEMENT region (country+)>
<!ELEMENT country (university+)>
<!ELEMENT university (campus+, rank+)>
<!ATTLIST university
    language CDATA#REQUIRED
    code ID#REQUIRED
    name CDATA#REQUIRED
>
<!ELEMENT campus (department+)>
<!ATTLIST campus
    name CDATA#REQUIRED
    location CDATA#IMPLIED
>
<!ELEMENT department (degree+, rank+)>
<!ELEMENT rank (#PCDATA)>
<!ATTLIST rank
    name (ARWU|QS)
    year CDATA#REQUIRED
>
<!ELEMENT degree (#PCDATA)>
<!ATTLIST degree
    mingpa CDATA#IMPLIED
    suggpa CDATA#IMPLIED
    name CDATA#REQUIRED
    period CDATA#REQUIRED
>
]>

<world>
  <region>Asia</region>
    <country>Singapore</country>
  <region>Europe</region>
    <country>UK</country>
  <region>America</region>
    <country>US</country>
  <region>Australia</region>
    <country>Australia</country>
</world>
